{
  "name": "miro-ide",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -n app,terminal -c blue,green \"pnpm --filter @miro-ide/app dev\" \"pnpm --filter @miro-ide/terminal-server dev\"",
    "build": "pnpm --filter @miro-ide/app build",
    "build:all": "pnpm -r build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "postinstall": "find node_modules -path '*node-pty/prebuilds/*/spawn-helper' -exec chmod +x {} \\; 2>/dev/null || true"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
