# Terminal Server Configuration

# Server port
PORT=3001

# Secret for signing tokens (REQUIRED in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SIGN_SECRET=your-secret-key-here

# Session idle timeout in milliseconds (default: 1 hour)
SESSION_TIMEOUT=3600000

# Token TTL in milliseconds (default: 15 minutes)
TOKEN_TTL=900000

# Allowed root directory for CWD (default: user home directory)
# Requests outside this directory will be rejected
ALLOWED_ROOT=/home/user

# Node environment
NODE_ENV=development
